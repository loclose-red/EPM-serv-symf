{% extends 'base.html.twig' %}
{% block link %}<a class="navbar-brand ancresNav" aria-current="page" href="{{ path('admin_board')}}">Tableau de bord</a>{% endblock %}


{% block title %}PtMesure index{% endblock %}

{% block body %}
    <h1>PtMesure index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pt_mes_nom</th>
                <th>Pt_mes_position</th>
                <th>Pt_mes_archive</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pt_mesure in pt_mesures %}
            <tr>
                <td>{{ pt_mesure.id }}</td>
                <td>{{ pt_mesure.ptMesNom }}</td>
                <td>{{ pt_mesure.ptMesPosition }}</td>
                <td>{{ pt_mesure.ptMesArchive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('pt_mesure_show', {'id': pt_mesure.id}) }}">show</a>
                    <a href="{{ path('pt_mesure_edit', {'id': pt_mesure.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pt_mesure_new') }}">Create new</a>
{% endblock %}
