{% extends 'base.html.twig' %}
{% block link %}<a class="navbar-brand ancresNav" aria-current="page" href="{{ path('admin_board')}}">Tableau de bord</a>{% endblock %}


{% block title %}Contact list{% endblock %}

{% block body %}
    <h1>Liste des contacts</h1>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Nom</th>
                <th>Prénom</th>
                <th>Société</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Message</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                {# <td>{{ contact.id }}</td> #}
                <td>{{ contact.nom }}</td>
                <td>{{ contact.prenom }}</td>
                <td>{{ contact.societe }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.phone }}</td>
                <td>{{ contact.message }}</td>
                <td>
                    {# <a href="{{ path('contact_show', {'id': contact.id}) }}">show</a> #}
                    <a class="btn btn-success" href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Pas d'enregistrement de trouvé!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('contact_new') }}">Create new</a> #}
{% endblock %}
