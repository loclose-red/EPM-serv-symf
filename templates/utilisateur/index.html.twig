{% extends 'base.html.twig' %}

{% block title %}Utilisateur index{% endblock %}

{% block body %}
  <h1>Liste Utilisateurs</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Logname</th>
        <th>Roles</th>
        <th>Password</th>
        <th>actions</th>
      </tr>
    </thead>
    <tbody>
      {% for utilisateur in utilisateurs %}
        <tr>
          <td>{{ utilisateur.id }}</td>
          <td>{{ utilisateur.logname }}</td>
          <td>{{ utilisateur.roles ? utilisateur.roles|json_encode : '' }}</td>
          <td>{{ utilisateur.password }}</td>
          <td>
            <a href="{{ path('utilisateur_show', {'id': utilisateur.id}) }}" class="btn btn-primary">Voir</a>
            <a href="{{ path('utilisateur_edit', {'id': utilisateur.id}) }}" class="btn btn-primary">Editer</a>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="5">no records found</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  {# <a href="{{ path('utilisateur_new') }}">Create new</a> #}
  <a href="{{ path('app_register') }}" class="btn btn-primary">Nouveau</a>
{% endblock %}
